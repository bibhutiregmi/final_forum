#post_div
  %h1= @post.title
  %p= @post.content

#post_content
  %h2
    = @post.comments.count
    Comments
    %hr
  #comments
    = render @post.comments

    %h3 Reply to thread
    = render "comments/form"

  %br/
  %hr/
  %br/
#button
  = link_to "Edit", edit_post_path(@post)
  = link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this?" }
  = link_to "Home", root_path